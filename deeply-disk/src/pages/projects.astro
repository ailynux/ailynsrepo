---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<style>
    body {
        background-color: #1e293b;
        color: #cbd5e1;
        font-family: 'Roboto', sans-serif;
        margin: 0;
        padding: 0;
    }
    .section {
        max-width: 900px;
        margin: auto;
        padding: 2rem;
        background-color: #1e293b;
        color: #cbd5e1;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        animation: fadeIn 1s ease-in-out;
    }
    .intro {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 2rem;
    }
    .intro-text {
        max-width: 60%;
        animation: slideInLeft 1s ease-in-out;
    }
    .intro-text h1 {
        font-size: 2.5rem;
        color: #38bdf8;
        margin-bottom: 0.5rem;
    }
    .intro-text p {
        font-size: 1.1rem;
        line-height: 1.5;
        margin-bottom: 1rem;
    }
    .intro-text a {
        color: #38bdf8;
        text-decoration: none;
        margin-right: 1rem;
        font-size: 1.2rem;
    }
    .intro-text a:hover {
        text-decoration: underline;
    }
    .intro-image {
        animation: slideInRight 1s ease-in-out;
        position: relative;
    }
    .intro-image img {
        border-radius: 50%;
        width: 300px;
        height: 300px;
        border: 3px solid #38bdf8;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }
    .intro-image img:hover {
        transform: scale(1.1);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
    }
    .intro-image::before {
        content: '';
        position: absolute;
        top: -10px;
        right: -10px;
        bottom: -10px;
        left: -10px;
        border-radius: 50%;
        border: 2px dashed #38bdf8;
        animation: rotate 5s linear infinite;
    }
    .social-links {
        margin-top: 1rem;
        display: flex;
        align-items: center;
    }
    .social-links a {
        color: #38bdf8;
        margin-right: 1rem;
        text-decoration: none;
    }
    .social-links a:hover {
        text-decoration: underline;
    }
    h2 {
        color: #fbbf24;
        border-bottom: 2px solid #fbbf24;
        padding-bottom: 0.5rem;
        margin-bottom: 1rem;
    }
    .content {
        margin-bottom: 2rem;
    }
    .project-card {
        margin-bottom: 1.5rem;
        padding: 1rem;
        background-color: #2d3748;
        border-radius: 10px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .project-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
    }
    .project-card h3 {
        margin: 0;
        font-size: 1.5rem;
        color: #fbbf24;
    }
    .project-card .date {
        font-size: 0.875rem;
        color: #9ca3af;
        margin-top: 0.25rem;
    }
    .project-card p {
        margin: 0.5rem 0;
        line-height: 1.5;
    }
    .project-card a {
        color: #fbbf24;
        text-decoration: none;
    }
    .project-card a:hover {
        text-decoration: underline;
    }
    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
    @keyframes slideInLeft {
        from { transform: translateX(-100%); opacity: 0; }
        to { transform: translateX(0); opacity: 1; }
    }
    @keyframes slideInRight {
        from { transform: translateX(100%); opacity: 0; }
        to { transform: translateX(0); opacity: 1; }
    }
    @keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
</style>

