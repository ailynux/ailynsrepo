<style>
@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap');

@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap');

body {
  background-color: #0d1117;
  color: #c9d1d9;
  font-family: 'Roboto', sans-serif;
  margin: 0;
  padding: 0;
}

.section {
  max-width: 900px;
  margin: 2rem auto; /* Added margin-top and margin-bottom to give space around the section */
  padding: 2rem;
  background-color: #161b22;
  color: #c9d1d9;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  animation: fadeIn 1s ease-in-out;
}

.intro {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 2rem;
  padding: 1rem;
  border-bottom: 2px solid #7c3aed;
  animation: slideInLeft 1s ease-in-out;
}

.intro-text {
  max-width: 60%;
}

.intro-text h1 {
  font-size: 3rem;
  color: #7c3aed;
  margin-bottom: 0.5rem;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

.intro-text p {
  font-size: 1.2rem;
  line-height: 1.5;
  margin-bottom: 1.5rem;
}

.intro-text a {
  color: #7c3aed;
  text-decoration: none;
  margin-right: 1rem;
  font-size: 1.2rem;
  transition: color 0.3s ease;
}

.intro-text a:hover {
  color: #ff7f50;
  text-decoration: underline;
}

.intro-image {
  animation: slideInRight 1s ease-in-out;
  position: relative;
}

.intro-image img {
  border-radius: 50%;
  width: 300px;
  height: 300px;
  border: 3px solid #ff7f50;
  transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
}

.intro-image img:hover {
  transform: scale(1.1);
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
}

.intro-image::before {
  content: '';
  position: absolute;
  top: -10px;
  right: -10px;
  bottom: -10px;
  left: -10px;
  border-radius: 50%;
  border: 2px dashed #ff7f50;
  animation: rotate 5s linear infinite;
}

.social-links {
  margin-top: 1rem;
  display: flex;
  align-items: center;
}

.social-links a {
  color: #7c3aed;
  margin-right: 1rem;
  text-decoration: none;
  transition: color 0.3s ease;
}

.social-links a:hover {
  color: #ff7f50;
  text-decoration: underline;
}

h2 {
  color: #c4e7d0;
  border-bottom: 2px solid #c4e7d0;
  padding-bottom: 0.5rem;
  margin-bottom: 1rem;
  text-align: left;
  animation: fadeIn 1s ease-in-out;
}

.content {
  display: flex;
  flex-wrap: wrap;
  gap: 1.5rem;
  margin-bottom: 2rem;
  justify-content: center;
}

.project-card {
  flex: 1 1 45%;
  padding: 1.5rem;
  background-color: #21262d;
  border-radius: 10px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
  overflow: hidden;
}

.project-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
}

.project-card h3 {
  margin: 0;
  font-size: 1.8rem;
  color: #c4e7d0;
}

.project-card .date {
  font-size: 0.875rem;
  color: #8b949e;
  margin-top: 0.25rem;
}

.project-card p {
  margin: 0.5rem 0;
  line-height: 1.5;
}

.project-card a {
  color: #ff7f50;
  text-decoration: none;
  align-self: flex-start;
  margin-top: auto;
  transition: color 0.3s ease;
}

.project-card a:hover {
  color: #7c3aed;
  text-decoration: underline;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideInLeft {
  from { transform: translateX(-100%); opacity: 0; }
  to { transform: translateX(0); opacity: 1; }
}

@keyframes slideInRight {
  from { transform: translateX(100%); opacity: 0; }
  to { transform: translateX(0); opacity: 1; }
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

</style>

