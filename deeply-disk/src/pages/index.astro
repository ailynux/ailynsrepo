---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import TechStack from '../components/TechStack.astro';
import Experience from '../components/Experience.astro';
---

<Layout title="Welcome to Astro - Ailyn Diaz's Portfolio">
    <main>
        <div class="profile">
            <img src="/images/ailynpfp.png" alt="Ailyn Diaz" class="profile-img"/>
        </div>
        <h1>Hi there, <span class="text-gradient">I'm Ailyn</span></h1>

        <p class="instructions">
            Welcome to my professional portfolio. Scroll down to learn more about my work and experiences.
        </p>

        <!-- About Section -->
        <section id="about" class="section">
            <h2 class="section-title">About Me</h2>
            <div class="content">
                <p>I'm a passionate software developer with a knack for creating efficient and scalable solutions. With a strong background in machine learning, web development, and system architecture, I bring a diverse skill set to any team.</p>
                <TechStack />
            </div>
        </section>

        <!-- Projects Section -->
        <section id="projects" class="section">
            <h2 class="section-title">Projects</h2>
            <div class="content link-card-grid">
                <Card 
                    title="Machine Learning Model" 
                    body="Developed a machine learning model to predict stock prices with an accuracy of 80%. Implemented in Python using TensorFlow and trained on historical data from the past decade."
                    href="/projects#machine-learning-model"
                />
                <Card 
                    title="E-commerce Website" 
                    body="Led the development of a scalable e-commerce platform using MERN stack, which now supports over 500 daily transactions."
                    href="/projects#ecommerce-website"
                />
                <!-- Add more project cards as needed -->
            </div>
        </section>

         <!-- Experience Section -->
		 <Experience />

