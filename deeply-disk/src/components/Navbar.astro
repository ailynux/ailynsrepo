<nav class="navbar">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" id="navbar-toggle-button">
                &#9776;
            </button>
        </div>
        <ul id="navbar-menu" class="navbar-menu">
            <li><a href="#profile">Profile</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#projects">Projects</a></li>
            <li><a href="#experience">Experience</a></li>
            <li><a href="#education">Education</a></li>
            <li><a href="#contact">Contact</a></li>
        </ul>
    </div>
</nav>

<script>
if (typeof window !== "undefined") {
  window.addEventListener("DOMContentLoaded", () => {
    const toggleButton = document.getElementById('navbar-toggle-button');
    const navbarMenu = document.getElementById('navbar-menu');

    const handleResize = () => {
      if (window.innerWidth > 1024 && navbarMenu) {
        navbarMenu.classList.remove('open');
      }
    };

    if (toggleButton && navbarMenu) {
        toggleButton.addEventListener('click', () => {
            navbarMenu.classList.toggle('open');
        });

        window.addEventListener('resize', handleResize);

        document.querySelectorAll('.navbar a').forEach(anchor => {
            anchor.addEventListener('click', (e) => {
                e.preventDefault();
                const href = anchor.getAttribute('href');
                if (href) {
                    const targetElement = document.querySelector(href);
                    if (targetElement) {
                        targetElement.scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                }
            });
        });

        console.log('Navbar is set up and ready to go!');
    } else {
        console.error('Toggle button or navbar menu not found');
    }
  });
}
</script>

<style>
/* General Navbar Styling */
.navbar {
    display: flex;
    justify-content: center;
    background-color: #0d0d0d;
    padding: 1rem;
    margin-bottom: 2rem;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border: 1px solid #000000;
}


/* Container Styling */
.navbar .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

/* Header for Mobile Toggle Button */
.navbar-header {
    display: none;
}

/* Navbar Menu Styling */
.navbar-menu {
    list-style-type: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 1rem;
    justify-content: center;
}

.navbar-menu li {
    margin: 0;
    position: relative;
    padding: 0.5rem 1rem;
}

/* Link Styling */
.navbar-menu a {
    text-decoration: none;
    color: #fafffe;
    font-size: 18px;
    display: block;
    transition: color 0.3s ease, background-color 0.3s ease;
    padding: 0.5rem 1rem;
    border-radius: 5px;
    background: #1c1c1c;
    box-shadow: 0 0 5px rgb(255, 255, 255);
}

.navbar-menu a:hover {
    color: #000000;
    background-color: #ececec;
    box-shadow: 0 0 10px #a1d4db, 0 0 20px #bfa8ff, 0 0 30px #a1d4db;
}

/* Toggle Button Styling */
.navbar-toggle {
    font-size: 26px;
    background: none;
    border: none;
    color: #fafffe;
    cursor: url('/images/fun-cursor.png'), auto;
    transition: color 0.3s ease;
}

.navbar-toggle:hover {
    color: #a1d4db;
}

/* Open Class for Mobile View */
.open {
    display: block;
    margin-top: 1rem;
}

/* Responsive Styling */
@media (max-width: 1024px) {
    .navbar-header {
        display: block;
    }

    .navbar-menu {
        display: none;
        flex-direction: column;
        align-items: flex-start;
        width: 100%;
        text-align: left;
        padding-left: 1rem;
    }

    .navbar-menu.open {
        display: flex;
    }

    .navbar-menu li {
        width: 100%;
        margin-bottom: 0.5rem;
    }

    .navbar-menu li:not(:last-child)::after {
        display: none;
    }
    
    .navbar-menu a {
        width: calc(100% - 5rem);
        padding: 0.5rem 1rem;
        text-align: left;
        background: #1c1c1c;
    }
    
    .navbar-menu a:hover {
        background-color: #ffffff;
        box-shadow: 0 0 10px #a1d4db, 0 0 20px #bfa8ff, 0 0 30px #a1d4db;
    }
}

/* Section Styling */
section {
    padding: 1rem;
    margin: 1rem 0;
}

@media (max-width: 1024px) {
    section {
        padding: 0.5rem;
        margin: 0.5rem 0;
    }
}

</style>
