<div class="tech-stack">
    <h3 class="tech-stack-title">Tech Stack</h3>
    <ul class="tech-list">
        <li class="tech-item">CSS</li>
        <li class="tech-item">JavaScript</li>
        <li class="tech-item">Python</li>
        <li class="tech-item">Ba$h</li>
        <li class="tech-item">Unix</li>
        <li class="tech-item">C#</li>
        <li class="tech-item">C++</li>
        <li class="tech-item">React</li>
        <li class="tech-item">Npm</li>
        <li class="tech-item">SQL</li>
        <li class="tech-item">Swift</li>
        <li class="tech-item">Android</li>
        <li class="tech-item">Networking</li>
        <li class="tech-item">Certified Nerd</li>
        <!-- Add more technologies as needed -->
    </ul>
</div>

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #004d00, #0055b3);
        --background-color: #0d0d0d;
        --text-color: #ffffff;
        --shadow-color: rgba(0, 0, 0, 0.6);
        --shadow-hover-color: rgba(0, 0, 0, 0.8);
        --title-gradient: linear-gradient(to right, #00b300, #0055b3);
        --hover-gradient: linear-gradient(135deg, #00b300, #0055b3);
    }

    .tech-stack {
        margin-top: 2rem;
        background: var(--background-color);
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 8px 20px var(--shadow-color);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .tech-stack::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 200%;
        height: 200%;
        background: var(--primary-gradient);
        filter: blur(100px);
        z-index: -1;
        transform: translate(-50%, -50%);
    }

    .tech-stack:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 25px var(--shadow-hover-color);
    }

    .tech-stack-title {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
        color: var(--text-color);
        text-align: center;
        position: relative;
        background: var(--title-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: shine 5s linear infinite;
    }

    .tech-stack-title::after {
        content: '';
        display: block;
        width: 80px;
        height: 4px;
        background: var(--title-gradient);
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        border-radius: 2px;
    }

    .tech-list {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        padding: 0;
        list-style: none;
        margin: 0;
        justify-content: center;
    }

    .tech-item {
        background: var(--primary-gradient);
        color: var(--text-color);
        padding: 0.7rem 1.2rem;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        transition: background 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 80px;
        text-align: center;
        box-shadow: 0 4px 15px var(--shadow-color);
        position: relative;
        overflow: hidden;
    }

    .tech-item::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 150%;
        height: 150%;
        background: var(--hover-gradient);
        filter: blur(20px);
        opacity: 0;
        transition: opacity 0.3s ease;
        transform: translate(-50%, -50%);
        z-index: -1;
    }

    .tech-item:hover::before {
        opacity: 1;
    }

    .tech-item:hover {
        transform: scale(1.1);
        background: var(--hover-gradient);
        box-shadow: 0 8px 20px var(--shadow-hover-color);
    }

    @keyframes shine {
        to {
            background-position: 200% center;
        }
    }
</style>
