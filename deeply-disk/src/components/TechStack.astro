<div class="tech-stack">
    <h3 class="tech-stack-title">Tech Stack</h3>
    <ul class="tech-list">
        <li class="tech-item">CSS</li>
        <li class="tech-item">JavaScript</li>
        <li class="tech-item">Python</li>
        <li class="tech-item">Ba$h</li>
        <li class="tech-item">Unix</li>
        <li class="tech-item">C#</li>
        <li class="tech-item">C++</li>
        <li class="tech-item">React</li>
        <li class="tech-item">Npm</li>
        <li class="tech-item">SQL</li>
        <li class="tech-item">Swift</li>
        <li class="tech-item">Android</li>
        <li class="tech-item">Networking</li>
        <li class="tech-item">Certified Nerd</li>
        <!-- Add more technologies as needed -->
    </ul>
</div>

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #6a11cb, #2575fc);
        --secondary-gradient: linear-gradient(135deg, #ff6f61, #de4463);
        --background-color: #ffffff;
        --text-color: #333333;
        --shadow-color: rgba(0, 0, 0, 0.1);
        --shadow-hover-color: rgba(0, 0, 0, 0.15);
        --title-gradient: linear-gradient(to right, #6a11cb, #2575fc);
        --hover-gradient: linear-gradient(135deg, #5f0a87, #a4508b);
    }

    .tech-stack {
        margin-top: 2rem;
        background: var(--background-color);
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 8px 20px var(--shadow-color);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .tech-stack:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 25px var(--shadow-hover-color);
    }

    .tech-stack-title {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
        color: var(--text-color);
        text-align: center;
        position: relative;
        background: var(--title-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .tech-stack-title::after {
        content: '';
        display: block;
        width: 60px;
        height: 4px;
        background: var(--title-gradient);
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        border-radius: 2px;
    }

    .tech-list {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        padding: 0;
        list-style: none;
        margin: 0;
        justify-content: center;
    }

    .tech-item {
        background: var(--primary-gradient);
        color: var(--background-color);
        padding: 0.7rem 1.2rem;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        transition: background 0.3s ease, transform 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 80px;
        text-align: center;
        box-shadow: 0 4px 15px var(--shadow-color);
    }

    .tech-item:hover {
        background: var(--hover-gradient);
        transform: translateY(-3px);
        box-shadow: 0 8px 20px var(--shadow-hover-color);
    }
</style>
